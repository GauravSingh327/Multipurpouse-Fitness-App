<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.stopwatchFragment">

 <TextView
     android:id="@+id/textView4"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:fontFamily="@font/ubermovemedium"
     android:text="Medidate"
     android:layout_marginLeft="30dp"
     android:textColor="#000"
     android:textSize="45sp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="@+id/guideline31" />

 <com.airbnb.lottie.LottieAnimationView

     android:id="@+id/breathe_bubble"
     android:layout_width="match_parent"
     android:layout_height="400dp"
     android:layout_marginStart="30dp"
     android:layout_marginEnd="30dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:lottie_autoPlay="false"
     app:lottie_loop="true"
     app:lottie_rawRes="@raw/breathe_bubble" />

 <Button
     android:id="@+id/btn"
     android:visibility="gone"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="button"
     android:textSize="15sp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/breathe_bubble" />

 <androidx.constraintlayout.widget.Guideline
     android:id="@+id/guideline31"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     app:layout_constraintGuide_begin="70dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>