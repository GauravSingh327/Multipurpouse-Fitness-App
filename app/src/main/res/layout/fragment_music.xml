<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.musicFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubermovemedium"
        android:text="Music"
        android:textColor="#000"
        android:textSize="45sp"
        app:layout_constraintTop_toBottomOf="@id/guideline25"
        app:layout_constraintStart_toStartOf="@id/guideline28"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="Also listen On"
        android:textColor="@color/secureblue"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/guideline28"
        app:layout_constraintTop_toBottomOf="@id/textView2" />


    <TextView
        android:id="@+id/txt_spotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter"
        android:text="Spotify"
        android:drawableLeft="@drawable/ic_baseline_spotify"
        android:drawablePadding="10dp"
        android:textColor="#000"
        android:textSize="25dp"
        
        app:layout_constraintStart_toStartOf="@id/guideline28"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <TextView
        android:id="@+id/txt_youtube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter"
        android:text="YouTube"
        android:textColor="#000"
        android:drawableLeft="@drawable/ic_baseline_youtube"

        android:drawablePadding="10dp"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@id/guideline28"
        app:layout_constraintTop_toBottomOf="@+id/txt_spotify" />

    <TextView
        android:id="@+id/txt_apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter"
        android:text="Apple Music"
        android:drawableLeft="@drawable/ic_outline_applemusic"
        android:drawablePadding="10dp"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/guideline28"
        app:layout_constraintTop_toBottomOf="@+id/txt_youtube" />


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline29"
        app:layout_constraintStart_toStartOf="@+id/guideline28"
        app:layout_constraintTop_toBottomOf="@+id/txt_apple"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginBottom="40dp"
        app:lottie_rawRes="@raw/res_music_wave" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>